# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://brandforge:brandforge_dev_password@localhost:5433/brandforge?schema=public

# =============================================================================
# CLERK AUTH
# Get these from https://dashboard.clerk.com
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
CLERK_SECRET_KEY=sk_test_YOUR_KEY_HERE
CLERK_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# =============================================================================
# STRIPE BILLING
# Get these from https://dashboard.stripe.com
# =============================================================================
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE

# Stripe Product/Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_BASIC=price_BASIC_ID
STRIPE_PRICE_MID=price_MID_ID
STRIPE_PRICE_PRO=price_PRO_ID
STRIPE_PRICE_SEAT_ADDON=price_SEAT_ADDON_ID
STRIPE_PRICE_STORAGE_5GB=price_STORAGE_5GB_ID
STRIPE_PRICE_STORAGE_20GB=price_STORAGE_20GB_ID

# =============================================================================
# STORAGE
# For local development: use 'local'
# For production: use 'r2' (Cloudflare R2)
# =============================================================================
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./storage

# Cloudflare R2 (for production)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=brandforge-storage
R2_PUBLIC_URL=

# =============================================================================
# AI PROVIDERS
# =============================================================================
# Provider selection: OPENAI | MOCK (default: MOCK for dev safety)
AI_PROVIDER=MOCK

# OpenAI configuration
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY
OPENAI_MODEL=gpt-4o-mini

# Encryption key for BYO API keys (generate with: openssl rand -base64 32)
API_KEY_ENCRYPTION_SECRET=YOUR_32_BYTE_SECRET_HERE

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
WORKER_POLL_INTERVAL_MS=5000
WORKER_BATCH_SIZE=5
WORKER_INSTANCE_ID=worker-local-1

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=BrandForge

# Node environment
NODE_ENV=development

# =============================================================================
# FEATURE FLAGS (optional)
# =============================================================================
FEATURE_SSO_ENABLED=false
FEATURE_BYO_ENABLED=true
FEATURE_BRANCHING_ENABLED=true
